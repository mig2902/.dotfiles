# Aplicaciones
########################



#Terminal
super + Return
      st

#Rofi
super + d
#     rofi -modi "window,run,drun" -show drun -theme material -lines 5 -show-icons -icon-theme Papirus Dark  
       j4-dmenu-desktop --dmenu="dmenu -i -w 600 -x 340 -y 272 -l 12 -h 40" --display-binary --no-generic --usage-log=/home/$USER/.cache/j4-dmenu.log

super + r
      dmenu_run_history -i -l 12

alt + Tab
      rofi -modi "window,run,drun" -show window -theme material -lines 5 -show-icons -icon-theme Papirus Dark

## Firefox
super + F2
      firefox

#Chromium
#super + F2
#      chromium

#File Manager
super + f
#      termite -e ranger
#      termite -e lf
       st -e ~/scripts/nwrap

#Spotify
super + F5
      spotify

#Emacsclient
super + e
      emacsclient -c

super + shift + e
      emacsclient -ne '(new-frame)'
      
super + a
      emacsclient -c -F '(quote (name . "agenda") (width  . 145) (height . 45) (left . 50) (top . 100))' -n -e "(agenda-frame)"

super + shift + m
      emacsclient -cn -F '(quote (name . "mu4e") (width  . 145) (height . 45) (left . 50) (top . 100))' -e '(mu4e)'

# emacs gtd
super + c; c
      emacsclient -c -F '(quote (name . "capture") (width  . 120) (height . 30) (left . 150))' -e "(make-capture-frame)"
super + i
      emacsclient -c -n "~/Drive/sync/gtd/a.org"

# Newsboat
super + n
#      st -e ~/scripts/newsboat-run
       st -e newsboat

#htop
super + F4
#      st -e ~/scripts/htop-run
      st -e htop

#Screenshots
Print
	flameshot gui -p ~/Imágenes/screenshots
super + shift + Print	
      flameshot gui -d 2000 -p ~/Imágenes/screenshots
super + Print	
      flameshot full -c

#Audio
XF86AudioMute
	pamixer -t
XF86AudioRaiseVolume
	pamixer -i 2
XF86AudioLowerVolume
	pamixer -d 2
XF86MonBrightnessUp
	xbacklight +10
XF86MonBrightnessDown
	xbacklight -10
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
XF86AudioStop
	playerctl stop

#matar compton
super + o
     pkill compton 

#revivir compton
super + shift + o
     compton -b --config ~/.config/compton.conf

# Reiniciar sxhdk 
super + shift + r
      pkill -USR1 -x sxhkd

#Reinicar bspwm
super + ctrl + r
      bspc wm -r

