##########################
# Manejo de ventanas
##########################

#Cerrar ventana
super + shift + q
      bspc node -c
alt + F4
    bspc node -c

#Matar con xkill
super + ctrl + x
      xkill

#Monocle
super + m
      bspc desktop -l next

#Monocle cambiar
super + ctrl + {j,k}
      bspc node -f {next,prev}.local

#Intercambiar nodo con el más grande (en todos los escritorios)
super + g
      bspc node -s biggest.local

#Cambiar estado de ventana
super + {t,shift + t,s,F11}
      bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#Set node flags
super + ctrl + {m,y,z}
      bspc node -g {hidden,sticky,private}

#Enfocar en dirección, con shift, mover.
super + {_,shift + }{h,j,k,l}
      bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Left,Down,Up,Right}
      bspc node -{f,s} {west,south,north,east}

#Cambiar de escritorio
super + ctrl + {h,l}		
      bspc desktop -f {prev,next}.local
super + ctrl + {Left,Right}
      bspc desktop -f {prev,next}.local

#Moverse al escritorio anterior
super + b
      bspc desktop -f last

#Enfocar o enviar a un escritorio 
super + {_,shift + }{1-9,0}
      bspc {desktop -f,node -d} '^{1-9,10}' --follow
super + ctrl {1-9,0} 	  
      bspc node -d '^{1-9,10}'

#Hacer más grande la ventana
super + alt + ctrl {h,j,k,l}
      bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

#Hacer más pequeña la ventana
super + alt + shift + {h,j,k,l}
      bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

#Rotar la interfaz
super + shift + {period,comma}
   bspc node @/ -R {90,270}


###################
# Split manual
###################

#Elegir dirección
super + alt + {h,j,k,l}
      bspc node -p {west,south,north,east}

#Elegir tamaño de nueva ventana
super + alt + {1-9}
      bspc node -o 0.{1-9}

#Cancelar split manual
super + alt + space
      bspc node -p cancel

# focus the older or newer node in the focus history
super + {9,0}
        wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h o n